{
  "name": "driving-school-lesson-manager",
  "version": "1.0.0",
  "description": "Driving School Lesson Manager with Complete DevOps Pipeline - Phases 1-5 Complete",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "test": "jest --detectOpenHandles",
    "test:unit": "jest tests/unit --coverage",
    "test:integration": "jest tests/integration --coverage",
    "test:all": "jest --coverage --verbose",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --coverage --ci --maxWorkers=2",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "health-check": "node healthcheck.js"
  },
  "dependencies": {
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.8.1",
    "@commitlint/config-conventional": "^17.8.1",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.0",
    "supertest": "^6.3.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "nodejs",
    "express",
    "mysql",
    "devops",
    "driving-school",
    "lesson-management",
    "ci-cd",
    "docker"
  ],
  "author": "DevOps Engineering Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/driving-lesson-manager"
  },
  "bugs": {
    "url": "https://github.com/yourusername/driving-lesson-manager/issues"
  },
  "homepage": "https://github.com/yourusername/driving-lesson-manager#readme"
}
